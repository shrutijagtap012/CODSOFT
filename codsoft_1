# Simple To-Do List Application

# Function to display the list of tasks
def display_tasks(tasks):
    if len(tasks) == 0:
        print("Your to-do list is empty.")
    else:
        print("\nYour To-Do List:")
        for idx, task in enumerate(tasks):
            status = "Done" if task['completed'] else "Not Done"
            print("{}. {} [{}]".format(idx + 1, task['description'], status))
    print()

# Function to add a new task
def add_task(tasks):
    description = input("Enter the task description: ")
    tasks.append({'description': description, 'completed': False})
    print("Task '{}' added.\n".format(description))

# Function to mark a task as completed
def mark_task_completed(tasks):
    display_tasks(tasks)
    try:
        task_num = int(input("Enter the task number to mark as completed: "))
        if 1 <= task_num <= len(tasks):
            tasks[task_num - 1]['completed'] = True
            print("Task '{}' marked as completed.\n".format(tasks[task_num - 1]['description']))
        else:
            print("Invalid task number.\n")
    except ValueError:
        print("Please enter a valid number.\n")

# Function to delete a task
def delete_task(tasks):
    display_tasks(tasks)
    try:
        task_num = int(input("Enter the task number to delete: "))
        if 1 <= task_num <= len(tasks):
            removed_task = tasks.pop(task_num - 1)
            print("Task '{}' deleted.\n".format(removed_task['description']))
        else:
            print("Invalid task number.\n")
    except ValueError:
        print("Please enter a valid number.\n")

# Function to update a task description
def update_task(tasks):
    display_tasks(tasks)
    try:
        task_num = int(input("Enter the task number to update: "))
        if 1 <= task_num <= len(tasks):
            new_description = input("Enter the new task description: ")
            tasks[task_num - 1]['description'] = new_description
            print("Task '{}' updated.\n".format(new_description))
        else:
            print("Invalid task number.\n")
    except ValueError:
        print("Please enter a valid number.\n")

# Main function for the command-line To-Do List application
def todo_list_app():
    tasks = []
    while True:
        print("1. View tasks")
        print("2. Add a new task")
        print("3. Mark task as completed")
        print("4. Update a task")
        print("5. Delete a task")
        print("6. Exit")

        # Read user input for menu choice
        choice = input("Enter your choice (1-6): ")

        if choice == 1:
            display_tasks(tasks)
        elif choice == 2:
            add_task(tasks)
        elif choice == 3:
            mark_task_completed(tasks)
        elif choice == 4:
            update_task(tasks)
        elif choice == 5:
            delete_task(tasks)
        elif choice == 6:
            print("Goodbye!")
            break
        else:
            print("Invalid choice. Please select a valid option.\n")

# Run the To-Do List Application
if __name__ == "__main__":
    todo_list_app()
